<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_acceptance_lift">

    <ImageView
        android:id="@+id/lift_details_image_view_avatar"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/h_spacing"
        android:adjustViewBounds="true"
        android:src="@mipmap/user_notification_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="23dp"
        android:layout_toRightOf="@+id/lift_details_image_view_avatar"
        android:gravity="left"
        android:orientation="vertical">

        <eu.h2020.sc.utils.TextViewCustom
            android:id="@+id/lift_details_text_view_user_name"
            style="@style/list_item_defined_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="@color/white" />


        <eu.h2020.sc.utils.TextViewCustom
            android:id="@+id/lift_details_text_view_user_rating"
            style="@style/list_item_defined_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lift_details_text_view_user_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/xs_spacing"
            android:drawableLeft="@drawable/ic_star_13dp"
            android:textColor="#e8c5c5"
            android:textSize="14sp" />

    </LinearLayout>
</RelativeLayout>