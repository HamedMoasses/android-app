<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="pickColour"
            android:src="@drawable/shape_picker_color"
            android:tag="@color/car_color_white"
            android:tint="@color/car_color_white" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/s_spacing"
            android:clickable="true"
            android:onClick="pickColour"
            android:src="@drawable/shape_picker_color"
            android:tag="@color/car_color_grey"
            android:tint="@color/car_color_grey" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/s_spacing"
            android:clickable="true"
            android:onClick="pickColour"
            android:src="@drawable/shape_picker_color"
            android:tag="@color/car_color_blue_grey"
            android:tint="@color/car_color_blue_grey" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/s_spacing"
            android:clickable="true"
            android:onClick="pickColour"
            android:src="@drawable/shape_picker_color"
            android:tag="@color/car_color_black"
            android:tint="@color/car_color_black" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/m_spacing"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="pickColour"
            android:src="@drawable/shape_picker_color"
            android:tag="@color/car_color_yellow"
            android:tint="@color/car_color_yellow" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/s_spacing"
            android:clickable="true"
            android:onClick="pickColour"
            android:src="@drawable/shape_picker_color"
            android:tag="@color/car_color_orange"
            android:tint="@color/car_color_orange" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/s_spacing"
            android:clickable="true"
            android:onClick="pickColour"
            android:src="@drawable/shape_picker_color"
            android:tag="@color/car_color_red"
            android:tint="@color/car_color_red" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/s_spacing"
            android:clickable="true"
            android:onClick="pickColour"
            android:src="@drawable/shape_picker_color"
            android:tag="@color/car_color_brown"
            android:tint="@color/car_color_brown" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/m_spacing"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="pickColour"
            android:src="@drawable/shape_picker_color"
            android:tag="@color/car_color_pink"
            android:tint="@color/car_color_pink" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/s_spacing"
            android:clickable="true"
            android:onClick="pickColour"
            android:src="@drawable/shape_picker_color"
            android:tag="@color/car_color_purple"
            android:tint="@color/car_color_purple" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/s_spacing"
            android:clickable="true"
            android:onClick="pickColour"
            android:src="@drawable/shape_picker_color"
            android:tag="@color/car_color_blue"
            android:tint="@color/car_color_blue" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/s_spacing"
            android:clickable="true"
            android:onClick="pickColour"
            android:src="@drawable/shape_picker_color"
            android:tag="@color/car_color_green"
            android:tint="@color/car_color_green" />
    </LinearLayout>


</LinearLayout>