<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/xh_spacing"
        android:background="@drawable/user_chat_bubble"
        android:orientation="vertical"
        android:gravity="right">

        <TextView
            android:id="@+id/text_view_sender_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem up sis at vero eros et accumsan et iusto odio dignissim qui blandit praesent ignissim qui b luptatum Lorem up sis at vero eros et accumsan et iusto odio dignissim qui blandit praesent luptatum Lorem up sis at vero eros et accumsan et iusto odio dignissim qui blandit praesent luptatum "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/text_view_sender_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/s_spacing"
            android:layout_marginTop="@dimen/s_spacing"
            android:alpha="0.6"
            android:text="22:00 AM"
            android:textColor="@color/light_grey" />
    </LinearLayout>

</LinearLayout>

