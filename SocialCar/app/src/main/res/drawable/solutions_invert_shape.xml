<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <padding
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp"
                        android:bottom="10dp" />
                    <size

                        android:width="30dp"
                        android:height="30dp"/>

                    <stroke
                        android:width="1dp"
                        android:color="@color/accent_color"/>

                    <solid
                        android:color="@color/primary_color" />

                </shape>
            </item>
            <item android:drawable="@drawable/ic_invert_30dp"/>
        </layer-list>



    </item>
</selector>