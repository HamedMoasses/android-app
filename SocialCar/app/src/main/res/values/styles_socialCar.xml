<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SocialCar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="drawerArrowStyle">@style/drawerArrow</item>
        <item name="colorControlActivated">@color/accent_color</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="Theme.SocialCar.ChooserTypeUser" parent="@style/Theme.SocialCar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>


    <style name="Theme.SocialCar.Status.Transparent" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorControlActivated">@color/accent_color</item>
        <item name="colorPrimary">@color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="divider">
        <item name="android:background">@color/medium_grey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
    </style>

    <style name="drawerArrow" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>


    <style name="signup_editText" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/medium_grey</item>
        <item name="colorControlActivated">@color/accent_color</item>
        <item name="colorControlHighlight">@color/accent_color</item>
        <item name="android:textColorPrimary">@color/primary_text_color</item>
        <item name="android:textColorHint">@color/medium_grey</item>
        <item name="android:textSize">@dimen/body_1</item>
    </style>

    <style name="signup_editText_theme">
        <item name="android:theme">@style/signup_editText</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/custom_tab_background</item>
    </style>

    <style name="btn_primary_color">
        <item name="android:background">@drawable/btn_filled_primary_color</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>